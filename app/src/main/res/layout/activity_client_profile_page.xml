<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/client_profile_screen"
    android:backgroundTint="#69000000"
    android:backgroundTintMode="src_over"
    tools:context=".viewModel.clientProfilePage">

    <Button
        android:id="@+id/buttonAppointHist"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:backgroundTint="@color/primary"
        android:clickable="false"
        android:onClick="handelButtonAppointments"
        android:text="My Appointments"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#111897"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_client_edit_profile_button"
        app:layout_constraintVertical_bias="0.295"
        tools:ignore="HardcodedText,NotSibling" />

    <EditText
        android:id="@+id/Name_editText"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginTop="112dp"
        android:background="@color/accent"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textColor="@color/text"
        android:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_button" />

    <EditText
        android:id="@+id/Email_editText"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="@color/accent"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        android:textColor="@color/text"
        android:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_editText" />

    <EditText
        android:id="@+id/phone_editText"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:background="@color/accent"
        android:ems="10"
        android:hint="phone"
        android:textColor="@color/text"
        android:inputType="number"
        android:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email_editText" />

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/accent"
        android:fontFamily="casual"
        android:text="Edit"
        android:textColor="@color/black"
        app:icon="@android:drawable/ic_dialog_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_client_edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:backgroundTint="@color/primary"
        android:text="Save"
        android:fontFamily="casual"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_editText" />


</androidx.constraintlayout.widget.ConstraintLayout>
