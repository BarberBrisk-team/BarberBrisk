<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barber_add_appointment"
    tools:context=".viewModel.AddAppointmentBarber">

    <Button
        android:id="@+id/buttonSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="showDatePicker"
        android:text="Select Date"
        android:backgroundTint="@color/accent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/buttonSelectTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSelectDate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:onClick="showTimePicker"
        android:text="Select Time"
        android:textStyle="bold"
        android:backgroundTint="@color/accent"
        android:textColor="@color/black"
        android:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/submitButtonAppointmentBarber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitButtonAppointmentBarber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:backgroundTint="@color/accent"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="casual"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selected_date_textView"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:background="#C29FFF"
        android:text=" "
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectDate" />

    <TextView
        android:id="@+id/selected_time_textView"
        android:layout_width="96dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:background="#C29FFF"
        android:text=" "
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
